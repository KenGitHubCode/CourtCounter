<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#5bacdf</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#5bacdf</item>
    </style>

    <!-- Base Team Views Overall. -->
    <style name="teamViewOverall" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Base Team Views overall theme. -->
    <style name="teamViewPerTeam" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Base TITLES theme. -->
    <style name="titleStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#616161</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
    </style>

    <!-- Base Logo theme. -->
    <style name="logoStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>


    <!-- Base SCORE theme. -->
    <style name="scoreStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">"sans-serif-light"</item>
    </style>

    <!-- Base BUTTONS theme. -->
    <style name="buttonStyle" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Reset BUTTONS theme. //found no use for this style. Commenting out.
    <style name="buttonResetStyle" parent="buttonStyle">
        <item name="layout_width">wrap_content</item>
        <item name="layout_marginBottom">24dp</item>
    </style> -->

</resources>
